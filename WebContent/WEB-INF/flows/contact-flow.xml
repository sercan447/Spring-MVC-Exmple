<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="message" class="com.caveofprogramming.spring.web.model.Message" />

	<view-state id="contact" model="message">
	<on-entry>
		<set name="requestScope.fromUser" value="usersService.getUser(currentUser.name)" />
		<set name="flowScope.fromName" value="fromUser?.name" />
		<set name="flowScope.fromEmail" value="fromUser?.email" />		
		<set name="message.username" value="requestParameters.uid"></set>
	</on-entry>
		<transition on="send" to="sendMessage"></transition>
	</view-state>
	
	<action-state id="sendMessage">
		<evaluate expression="usersService.sendMessage(message)"></evaluate>
		<transition to="messagesent"></transition>
	</action-state>

	<view-state id="messagesent">
	</view-state>

</flow>